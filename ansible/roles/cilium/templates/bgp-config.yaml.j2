apiVersion: v1
kind: ConfigMap
metadata:
  name: bgp-config
  namespace: kube-system
data:
  config.yaml: |
    peers:
{% for address in groups['router'] %}
      - peer-address: {{ address }}
        peer-asn: 65020
        my-asn: 65021
{% endfor %}
    address-pools:
      - name: default
        protocol: bgp
        addresses:
{% for item in groups['router'] %}
          - {{ hostvars[item]['bgp_address'] }}
{% endfor %}
