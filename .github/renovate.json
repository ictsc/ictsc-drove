{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchCategories": ["github-actions"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "python/cpython",
      "extractVersionTemplate": "^v(?<version>\\d+\\.\\d+)(\\.\\d+)$",
      "fileMatch": ["(^|/)Pipfile$"],
      "matchStrings": ["python_version = \"(?<currentValue>.+)\""]
    },
    {
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "mrlesmithjr/ansible-netplan",
      "extractVersionTemplate": "^v(?<version>\\d+\\.\\d+\\.\\d+)$",
      "fileMatch": ["(^|/)Pipfile$"],
      "matchStrings": [
        "ansible-galaxy install mrlesmithjr\\.netplan:(?<currentValue>\\d+\\.\\d+\\.\\d+);"
      ]
    },
    {
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "ansible-collections/vyos.vyos",
      "fileMatch": ["(^|/)Pipfile$"],
      "matchStrings": [
        "ansible-galaxy collection install vyos\\.vyos:(?<currentValue>\\d+\\.\\d+\\.\\d+);"
      ]
    }
  ]
}
